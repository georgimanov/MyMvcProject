@model MyMvcProject.Web.ViewModels.Books.BookUpdateModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<hr />
@using (Html.BeginForm("Edit", "Books", FormMethod.Post, new
{
    @class = "form"
}))
{
    @Html.AntiForgeryToken()

    <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id" />


    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" />
    </div>
    <div class="form-group">

        <label for="Resume">Resume</label>
        <input type="text" class="form-control" id="Resume" name="Resume" value="@Model.Resume" />

    </div>
    <div class="form-group">

        <label for="CategoryId">Select list:</label>
        <select class="form-control" id="Category" name="CategoryId">
            @foreach (var category in Model.Category)
            {

                <option value="@category.Value" @(Model.CategoryId == int.Parse(category.Value) ? "selected" : "")>@category.Text</option>
            }
        </select>

    </div>

    <input type="submit" class="btn btn-default" />
}

<div class="clearfix"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}