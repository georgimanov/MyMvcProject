@model MyMvcProject.Web.ViewModels.Books.BookInputModel

@{
    ViewBag.Title = "Add operation";
}

<h2 class="text-center">Add book</h2>
<hr />
@using (Html.BeginForm("Add", "Books", FormMethod.Post, new
{
    @class = "form"
}))
{
    @Html.AntiForgeryToken()

    <div class="form-group">

        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" />
    </div>
    <div class="form-group">

        <label for="Resume">Resume</label>
        <input type="text" class="form-control" id="Resume" name="Resume" />

    </div>
    <div class="form-group">

        <label for="CategoryId">Select list:</label>
        <select class="form-control" id="Category" name="CategoryId">
            @foreach (var category in Model.Category)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>

    </div>

    <input type="submit" class="btn btn-default" />
}

<div class="clearfix"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}